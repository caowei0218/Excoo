<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f1ed"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/add_rl_tittle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F74275" >

        <TextView
            android:id="@+id/add_tv_tittle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/add"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/add_btn_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="#F74275"
            android:src="@drawable/btn_back" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_rl_picture"
        android:layout_width="fill_parent"
        android:layout_height="260dp"
        android:background="@drawable/bg_add" >

        <ImageView
            android:id="@+id/add_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/add_ib_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:src="@drawable/add_camera" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/add_ll_info"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/season"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/add_tv_season"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="@string/season"
                android:textColor="#333333"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/add_tv_season"
                android:layout_alignLeft="@+id/add_tv_showseason"
                android:background="@drawable/add_line" />

            <TextView
                android:id="@+id/add_tv_showseason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/add_tv_season"
                android:layout_toRightOf="@+id/add_tv_season"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="16sp" >
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/add_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="@string/name"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/add_et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/add_tv_name"
                android:layout_toRightOf="@+id/add_tv_name"
                android:layout_weight="1"
                android:background="@null"
                android:cursorVisible="false"
                android:ems="10"
                android:gravity="center"
                android:maxLength="7"
                android:singleLine="true"
                android:textSize="16sp" >
            </EditText>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/add_tv_name"
                android:layout_alignLeft="@+id/add_et_name"
                android:background="@drawable/add_line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/add_tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="@string/type"
                android:textColor="#333333"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/add_tv_type"
                android:layout_alignLeft="@+id/add_tv_showtype"
                android:background="@drawable/add_line" />

            <TextView
                android:id="@+id/add_tv_showtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/add_tv_type"
                android:layout_toRightOf="@+id/add_tv_type"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp" >
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/add_tv_positon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="@string/position"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/add_et_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/add_tv_positon"
                android:layout_toRightOf="@+id/add_tv_positon"
                android:layout_weight="1"
                android:background="@null"
                android:cursorVisible="false"
                android:ems="10"
                android:gravity="center"
                android:maxLength="7"
                android:singleLine="true"
                android:textSize="16sp" >
            </EditText>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/add_tv_positon"
                android:layout_alignLeft="@+id/add_et_position"
                android:background="@drawable/add_line" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/add_tv_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="@string/mark"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/add_et_mark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/add_tv_mark"
                android:layout_toRightOf="@+id/add_tv_mark"
                android:layout_weight="1"
                android:background="@null"
                android:cursorVisible="false"
                android:ems="10"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="16sp" >
            </EditText>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/add_tv_mark"
                android:layout_alignLeft="@+id/add_et_mark"
                android:background="@drawable/add_line" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="@color/white" >

        <Button
            android:id="@+id/add_btn_save"
            style="@style/add_btn_shape"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/save"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>