<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/my_rl_tittle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F74275" >

        <TextView
            android:id="@+id/my_tv_tittle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/my"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/my_ib_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="#F74275"
            android:src="@drawable/btn_back" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/my_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_rl_tittle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/user_icon" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_iv_icon"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" >

        <RelativeLayout
            android:id="@+id/my_rl_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/my_iv_account"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/login_account_icon" />

            <TextView
                android:id="@+id/my_tv_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/my_iv_account"
                android:hint="@string/my_tv_account"
                android:textSize="20sp" >
            </TextView>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/my_iv_account"
                android:layout_marginTop="2dp"
                android:background="#33000000" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_rl_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_rl_user"
            android:layout_marginTop="5dp" >

            <ImageView
                android:id="@+id/my_iv_message"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="35dp"
                android:src="@drawable/my_message" />

            <TextView
                android:id="@+id/my_tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/my_iv_message"
                android:hint="@string/my_tv_message_hint"
                android:textSize="20sp" >
            </TextView>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/my_iv_message"
                android:layout_marginTop="2dp"
                android:background="#33000000" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_rl_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_rl_message"
            android:layout_marginTop="5dp" >

            <ImageView
                android:id="@+id/my_iv_settings"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="35dp"
                android:src="@drawable/my_settings" />

            <TextView
                android:id="@+id/my_tv_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/my_iv_settings"
                android:hint="@string/my_tv_setting_hint"
                android:textSize="20sp" >
            </TextView>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/my_iv_settings"
                android:layout_marginTop="2dp"
                android:background="#33000000" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_rl_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_rl_settings"
            android:layout_marginTop="5dp" >

            <ImageView
                android:id="@+id/my_iv_update"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/my_update" />

            <TextView
                android:id="@+id/my_tv_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/my_iv_update"
                android:hint="@string/my_tv_update_hint"
                android:textSize="20sp" >
            </TextView>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/my_iv_update"
                android:layout_marginTop="2dp"
                android:background="#33000000" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tell_a_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_rl_update"
            android:layout_marginTop="5dp" >

            <ImageView
                android:id="@+id/tell_a_friend_iv_settings"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="35dp"
                android:src="@drawable/share_to_friend" />

            <TextView
                android:id="@+id/tell_a_friend_tv_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tell_a_friend_iv_settings"
                android:hint="@string/my_tv_tell_a_friend_hint"
                android:textSize="20sp" >
            </TextView>

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tell_a_friend_iv_settings"
                android:layout_marginTop="2dp"
                android:background="#33000000" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/empty_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tell_a_friend"
            android:layout_marginTop="5dp" >

            <ImageView
                android:id="@+id/empty_cache_iv_settings"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="35dp"
                android:src="@drawable/empty_cache" />

            <TextView
                android:id="@+id/empty_cache_tv_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/empty_cache_iv_settings"
                android:hint="@string/my_tv_empty_cache_hint"
                android:textSize="20sp" >
            </TextView>

            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/empty_cache_iv_settings"
                android:layout_marginTop="2dp"
                android:background="#33000000" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/my_btn_exit"
        style="@style/add_btn_shape"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="@string/my_btn_exit"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>