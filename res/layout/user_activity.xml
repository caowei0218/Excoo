        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/user_iv_email"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="11dp"
                android:src="@drawable/regist_email_icon" />

            <EditText
                android:id="@+id/user_et_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/user_iv_email"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:maxLength="20"
                android:singleLine="true" >
            </EditText>

            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/user_iv_email"
                android:layout_marginTop="10dp"
                android:background="#33000000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/user_iv_cellphone"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="14dp"
                android:src="@drawable/regist_phone_icon" />

            <EditText
                android:id="@+id/user_et_cellphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/user_iv_cellphone"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:maxLength="11"
                android:numeric="integer"
                android:singleLine="true" >
            </EditText>

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/user_iv_cellphone"
                android:layout_marginTop="10dp"
                android:background="#33000000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/user_iv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="9dp"
                android:src="@drawable/regist_checkcode" />

            <EditText
                android:id="@+id/user_et_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/user_iv_nickname"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:maxLength="7"
                android:singleLine="true" >
            </EditText>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/user_iv_nickname"
                android:layout_marginTop="10dp"
                android:background="#33000000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >

            <ImageView
                android:id="@+id/user_iv_man"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/regist_man" />

            <TextView
                android:id="@+id/user_tv_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/user_iv_man"
                android:text="@string/regist_tv_man"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/user_iv_woman"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/user_tv_man"
                android:src="@drawable/regist_woman" />

            <TextView
                android:id="@+id/user_tv_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/user_iv_woman"
                android:text="@string/regist_tv_woman"
                android:textSize="20sp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/user_tv_man"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/user_rb_man"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="140dp"
                    android:button="@drawable/regist_sex" />

                <RadioButton
                    android:id="@+id/user_rb_woman"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:button="@drawable/regist_sex" />
            </RadioGroup>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/user_iv_man"
                android:layout_marginTop="10dp"
                android:background="#33000000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/user_tv_age1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/regist_tv_age1"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/user_tv_age2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/user_tv_age1"
                android:text="@string/regist_tv_age2"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/user_tv_age3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/user_tv_age2"
                android:text="@string/regist_tv_age3"
                android:textSize="17sp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/user_tv_age1"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/user_rb_age0"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60dp"
                    android:button="@drawable/regist_sex" />

                <RadioButton
                    android:id="@+id/user_rb_age1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60dp"
                    android:layout_toRightOf="@+id/user_tv_age2"
                    android:button="@drawable/regist_sex" />

                <RadioButton
                    android:id="@+id/user_rb_age2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:button="@drawable/regist_sex" />
            </RadioGroup>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/user_btn_save"
        style="@style/add_btn_shape"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/user_ll_info"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/user_ll_info"
        android:layout_marginBottom="15dp"
        android:text="@string/user_btn_save"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>